NAME= jrobin.filler

NAME_LIB= libft.a
PATH_LIB= libft/

CC=		gcc
FLAGS=	-Wall -Wextra -Werror -g #-fsanitize=address

DIR_SRC:= filler_src/
DIR_OBJ:= obj/

SRC_BASE=	filler.c \
			piece.c \
			parse_map.c \
			place_piece.c

PATH_INC=	inc/
PATH_INC_LIB= libft/inc/


OBJS= $(addprefix $(DIR_OBJ), $(SRC_BASE:.c=.o))

all: $(DIR_OBJ) $(OBJS) $(LIB)
	$(CC) $(FLAGS) $(OBJS) $(PATH_LIB)$(NAME_LIB) -o $(NAME)

LIB:
	make -C libft

DEBUG: 
	@echo $(PATH_INC)

$(DIR_OBJ):
		mkdir -p $(DIR_OBJ)
		mkdir -p $(dir $(OBJS))

$(DIR_OBJ)%.o: $(DIR_SRC)%.c
	$(CC) $(FLAGS) -I $(PATH_INC) -I $(PATH_INC_LIB) -MMD -c $< -o $@

clean:
	@rm -rf $(DIR_OBJ)

fclean: clean 
	@rm -f $(NAME)

re: fclean all

.PHONY :	clean fclean re DEBUG
